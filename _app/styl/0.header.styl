header
	padding 20px 0
	overflow hidden
	position relative
	margin-bottom: 50px
	&:after
		content: ''
		display block
		position: absolute
		left 0
		bottom: 0
		width 320px
		height 1px
		background-color: #7F7F7F
.header-logo
	width 106px
	height 47px
	float left
	background-image url(../img/images/logo.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
.contacts
	float: right
	text-align: right
.contact
	line-height: 36px
	margin-left: 12px
	padding-left: 26px
	background-repeat no-repeat
	background-position: left top
	// background-size contain
	font-size: 15px
	font-family: "Arial", sans-serif
	color #000
	&:focus
		text-decoration: none
		color #000
	&:hover
		text-decoration: underline
		color #000
	&&-tel
		background-image url(../img/icons/tube.png)
		&:first-of-type
			margin-left: 0
	&&-skype
		background-image url(../img/icons/skype.png)
	&&-email
		background-image url(../img/icons/envelope.png)
		padding-left: 30px