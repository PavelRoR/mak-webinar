.checking {
	display: table;
	width 100%
	max-width 480px
	margin: 3px auto 0
	text-align: left
}

.checking .check-label {
	line-height: 18px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 4px 0 0 25px
	text-align: left;
	font-size: 12px
	opacity .6
}

.checking .check-label a
	text-decoration: none
	color #000
	font-family: OSSB
	font-size: 13px
	&:focus
		color #000
	&:hover
		color #000

.checking .check-label:before {
	content: '';
	background-color: #F7F8FA
	position: absolute;
	left: 0;
	top: 3px
	width: 18px;
	height: 18px;
	border 1px solid #969696
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 6px;
	top: -10px;
	width: 11px;
	height: 18px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #000
	border-right: 2px solid #000
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check-label:before {
	background-color: #F7F8FA

}

.check:checked + .check-label:after {
	opacity: 1;
	top: -1px
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}
