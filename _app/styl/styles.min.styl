@import '../_css/bootstrap.min.css'
@import '../_css/jquery.fancybox.min.css'

*
	margin 0
	padding 0
	outline none
body
	font-size: 16px
	font-family: M
	color #000
	background-color: #fff
	background-image url(../img/backs/last-bg.png)
	background-repeat no-repeat
	background-position: bottom center
	background-size: cover
a
	color: #fefefe
	&:focus
		outline: 0
		text-decoration: none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #fff
		// border-radius 3px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.general-title
	font-size: 30px;
	font-family: OSB
	color: rgb(63, 85, 18);
	line-height: 1.2;
	text-align: left;
	margin-bottom: 55px
.button
	display block
	margin 0 auto
	text-align: center
	transition: all .3s ease
	font-size: 16px
	font-family: OSSB
	text-decoration: none
	width 100%
	border 1px solid
	cursor pointer
	&-1
		border-color rgb(35, 41, 57);
		background-color: rgb(204, 204, 255);
		max-width: 350px;
		padding: 20px 10px
		color #000
		&:focus
			color #000
			background-color: rgb(204, 204, 255);
		&:hover
			// color rgb(204, 204, 255);
			// border-color: rgb(204, 204, 255);
			background-color: transparent
	&-2
		border-color rgb(150, 150, 150);
		max-width: 239px;
		span
			background-color: rgb(242, 58, 58);
			color #fff
			display block
			padding 13px 10px
			border 6px outset #FF8080
		&:focus
			& span
				color #fff
				background-color: rgb(242, 58, 58);
		&:hover
			border-color: rgb(242, 58, 58);
			& span
				border-style: inset
.general-list
	li
		list-style: none
		padding-left: 30px
		margin-bottom: 10px
		position relative
		&:last-child
			margin-bottom: 0
		&:before
			content ''
			display block
			width 11px
			height 11px
			border-radius: 50px
			position: absolute
			left 0
			top 7px
			background-color: #CDCDFF

